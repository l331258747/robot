<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/view_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_UGV"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:text="UGV"
        app:layout_constraintBottom_toBottomOf="@+id/view_title"
        app:layout_constraintStart_toStartOf="@+id/view_title"
        app:layout_constraintTop_toTopOf="@+id/view_title" />


    <ImageView
        android:id="@+id/iv_login"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:paddingStart="@dimen/dp_30"
        android:paddingEnd="@dimen/dp_30"
        android:src="@mipmap/ic_login_un"
        app:layout_constraintBottom_toBottomOf="@+id/view_title"
        app:layout_constraintEnd_toEndOf="@+id/view_title"
        app:layout_constraintTop_toTopOf="@+id/view_title" />

    <View
        android:id="@+id/view_conter"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_single"
        android:layout_width="@dimen/dp_320"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/sp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/btn_0_00"
        android:text="进入单机控制界面"
        app:layout_constraintBottom_toBottomOf="@+id/view_conter"
        app:layout_constraintEnd_toEndOf="@id/view_conter"
        app:layout_constraintStart_toStartOf="@+id/view_conter" />

    <TextView
        android:id="@+id/tv_many"
        android:layout_width="@dimen/dp_320"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/sp_20"
        android:background="@drawable/btn_0_00"
        android:text="进入编队控制界面"
        app:layout_constraintEnd_toEndOf="@id/view_conter"
        app:layout_constraintStart_toStartOf="@+id/view_conter"
        app:layout_constraintTop_toTopOf="@+id/view_conter" />

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/dp_40"
        android:src="@mipmap/ic_link_un"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="链接状态"
        app:layout_constraintEnd_toEndOf="@+id/iv_status"
        android:layout_marginTop="@dimen/dp_8"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@+id/iv_status"
        app:layout_constraintTop_toBottomOf="@+id/iv_status"/>


    <TextView
        android:id="@+id/tv_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进入设备 >"
        android:padding="@dimen/dp_30"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>