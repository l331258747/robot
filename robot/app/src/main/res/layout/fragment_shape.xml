<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_p5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_p30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_p50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_p70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />


    <TextView
        android:id="@+id/tv_sjx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="三角形编队"
        android:layout_marginTop="@dimen/dp_40"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/line_p5"
        app:layout_constraintTop_toTopOf="parent" />

    <com.play.robot.widget.SwitchButton
        android:id="@+id/switch_sjx"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintTop_toTopOf="@+id/tv_sjx"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sjx"
        app:layout_constraintStart_toStartOf="@+id/line_p30"/>

    <TextView
        android:id="@+id/tv_zx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:text="纵向编队"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/line_p5"
        app:layout_constraintTop_toBottomOf="@+id/tv_sjx" />

    <com.play.robot.widget.SwitchButton
        android:id="@+id/switch_zx"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintTop_toTopOf="@+id/tv_zx"
        app:layout_constraintBottom_toBottomOf="@+id/tv_zx"
        app:layout_constraintStart_toStartOf="@+id/line_p30"/>

    <TextView
        android:id="@+id/tv_hx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="横向编队"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_40"
        app:layout_constraintStart_toStartOf="@+id/line_p50"
        app:layout_constraintTop_toTopOf="parent" />

    <com.play.robot.widget.SwitchButton
        android:id="@+id/switch_hx"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintTop_toTopOf="@+id/tv_hx"
        app:layout_constraintBottom_toBottomOf="@+id/tv_hx"
        app:layout_constraintStart_toStartOf="@+id/line_p70"/>

    <TextView
        android:id="@+id/tv_fslj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编队控制"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_40"
        app:layout_constraintStart_toStartOf="@+id/line_p50"
        app:layout_constraintTop_toBottomOf="@+id/tv_hx" />

    <ImageView
        android:id="@+id/iv_fslj"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/setting_more_un"
        android:background="@drawable/bg_click"
        app:layout_constraintTop_toTopOf="@+id/tv_fslj"
        app:layout_constraintBottom_toBottomOf="@+id/tv_fslj"
        app:layout_constraintStart_toStartOf="@+id/line_p70"/>

</androidx.constraintlayout.widget.ConstraintLayout>