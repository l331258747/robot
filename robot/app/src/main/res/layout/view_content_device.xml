<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_status_0"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:src="@mipmap/ic_device"
        app:layout_constraintBottom_toTopOf="@id/iv_status_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/iv_status_car_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_status_0"
        android:layout_marginStart="@dimen/dp_3"
        app:layout_constraintBottom_toBottomOf="@id/iv_status_0"
        android:textSize="@dimen/sp_10"
        tools:text="10"/>

    <ImageView
        android:id="@+id/iv_status_1"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:src="@mipmap/ic_device"
        app:layout_constraintBottom_toTopOf="@+id/iv_status_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_status_0" />

    <TextView
        android:id="@+id/iv_status_car_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_status_1"
        android:layout_marginStart="@dimen/dp_3"
        app:layout_constraintBottom_toBottomOf="@id/iv_status_1"
        android:textSize="@dimen/sp_10"
        tools:text="10"/>

    <ImageView
        android:id="@+id/iv_status_2"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:src="@mipmap/ic_device"
        app:layout_constraintBottom_toTopOf="@+id/iv_status_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_status_1" />

    <TextView
        android:id="@+id/iv_status_car_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_status_2"
        android:layout_marginStart="@dimen/dp_3"
        app:layout_constraintBottom_toBottomOf="@id/iv_status_2"
        android:textSize="@dimen/sp_10"
        tools:text="10"/>

    <ImageView
        android:id="@+id/iv_status_3"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:src="@mipmap/ic_device"
        app:layout_constraintBottom_toTopOf="@+id/iv_status_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_status_2" />

    <TextView
        android:id="@+id/iv_status_car_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_status_3"
        android:layout_marginStart="@dimen/dp_3"
        app:layout_constraintBottom_toBottomOf="@id/iv_status_3"
        android:textSize="@dimen/sp_10"
        tools:text="10"/>

    <ImageView
        android:id="@+id/iv_status_4"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:src="@mipmap/ic_device"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_status_3" />

    <TextView
        android:id="@+id/iv_status_car_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_status_4"
        android:layout_marginStart="@dimen/dp_3"
        app:layout_constraintBottom_toBottomOf="@id/iv_status_4"
        android:textSize="@dimen/sp_10"
        tools:text="10"/>

</androidx.constraintlayout.widget.ConstraintLayout>